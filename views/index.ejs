<!-- index.ejs -->
<h1>Video Game Store</h1>
<p>Browse our categories to explore games, consoles, and accessories.</p>

<div class="cards-grid">
  <% if (categories && categories.length) { %>
    <% 
      // Only show homepage main categories
      const homepageCategories = categories.filter(cat => 
        ['Games', 'Consoles', 'Accessories'].includes(cat.name)
      );
      homepageCategories.forEach(category => { 
    %>
      <div class="card">
        <h3>
          <a href="/categories/<%= category.id %>"><%= category.name %></a>
        </h3>
        <p><%= category.description || 'No description available.' %></p>
        <a href="/categories/<%= category.id %>">
          <button aria-label="Explore <%= category.name %> category">Explore</button>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p>No categories found.</p>
  <% } %>
</div>
